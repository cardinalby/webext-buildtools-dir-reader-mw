{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "src",
    "outDir": "./dist",
    "strict": true,
    "plugins": [
      { "transform": "typescript-is/lib/transform-inline/transformer" }
    ]
  },
  "include": ["src", "declarations"],
  "exclude": ["node_modules", "**/__tests__/*"]
}